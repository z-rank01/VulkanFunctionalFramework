# .clang-tidy
Checks: >
  -bugprone-*,
  -clang-analyzer-*,
  -cert-*,
  -misc-*,
  -modernize-*,
  -performance-*,
  -portability-*,
  -readability-*,
  -cppcoreguidelines-*

WarningsAsErrors: '*'
HeaderFilterRegex: '.*'
FormatStyle: file

CheckOptions:
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'