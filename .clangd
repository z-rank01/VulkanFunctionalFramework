---
# 编译选项
CompileFlags:
  # 将当前目录添加到包含路径
  Add: 
    - -std:c++latest
    - -std=c++23
    - -Wall
    - -Wno-c++98-compat
    - -Wno-c++98-compat-pedantic
    - -Ie:/Projects/ZRenderGraph/src
    - -Ie:/Projects/ZRenderGraph/include
  
  # 忽略编译器特定警告
  Remove: 
    - -W*
    - -fsanitize=*
  
  # 移除编译器中不需要的参数
  Compiler: cl

# 诊断设置
Diagnostics:
  # clang-tidy 集成
  ClangTidy:
    Add: 
      - clang-diagnostic-*
      - clang-analyzer-*
      - modernize-*
      - performance-*
      - readability-*
      - bugprone-*
      - cppcoreguidelines-*
      - misc-*
    
    Remove:
      - readability-braces-around-statements
      - readability-magic-numbers
      - readability-named-parameter
      - readability-function-cognitive-complexity
      - cppcoreguidelines-avoid-magic-numbers
      - cppcoreguidelines-pro-type-reinterpret-cast
      - cppcoreguidelines-pro-bounds-pointer-arithmetic
      - cppcoreguidelines-pro-bounds-array-to-pointer-decay
      - cppcoreguidelines-owning-memory
      - misc-non-private-member-variables-in-classes
      - modernize-use-trailing-return-type
      - modernize-use-nodiscard
      - cppcoreguidelines-avoid-c-arrays
      - modernize-avoid-c-arrays
      - cppcoreguidelines-avoid-magic-numbers
      - cppcoreguidelines-c-copy-assignment-signature
      - cppcoreguidelines-pro-bounds-constant-array-index
      - cppcoreguidelines-pro-type-vararg
    
    # C++ Core Guidelines 命名规范设置 (NL.10: 倾向于 snake_case)
    CheckOptions:
      # 类型 (类、结构体、枚举、联合)：snake_case (与标准库一致)
      readability-identifier-naming.ClassCase: lower_case
      readability-identifier-naming.StructCase: lower_case
      readability-identifier-naming.EnumCase: lower_case
      readability-identifier-naming.UnionCase: lower_case
      
      # 函数和方法：snake_case
      readability-identifier-naming.FunctionCase: lower_case
      readability-identifier-naming.MethodCase: lower_case
      
      # 变量和参数：snake_case
      readability-identifier-naming.VariableCase: lower_case
      readability-identifier-naming.ParameterCase: lower_case
      
      # 成员变量：snake_case (Core Guidelines 推荐与标准库一致，通常不强制后缀，但为了清晰可保留下划线)
      # 这里我们遵循最纯粹的 Core Guidelines 风格：全小写，无强制后缀
      readability-identifier-naming.MemberCase: lower_case
      readability-identifier-naming.PrivateMemberCase: lower_case
      
      # 常量 (包括全局、静态、成员)：snake_case (避免 ALL_CAPS，也不使用 k 前缀)
      readability-identifier-naming.ConstantCase: lower_case
      readability-identifier-naming.ConstantMemberCase: lower_case
      readability-identifier-naming.GlobalConstantCase: lower_case
      readability-identifier-naming.StaticConstantCase: lower_case
      readability-identifier-naming.LocalConstantCase: lower_case
      
      # 枚举值：snake_case
      readability-identifier-naming.EnumConstantCase: lower_case
      
      # 模板参数：CamelCase (通常 T, U, ValueType 等保持大写开头以区分)
      readability-identifier-naming.TemplateParameterCase: CamelCase
      
      # 宏定义：UPPER_CASE (保持显眼)
      readability-identifier-naming.MacroDefinitionCase: UPPER_CASE
      
      # 命名空间：lower_case
      readability-identifier-naming.NamespaceCase: lower_case
      
      # 函数长度限制
      readability-function-size.LineThreshold: 200
      readability-function-size.StatementThreshold: 800
      readability-function-size.BranchThreshold: 50
      readability-function-size.ParameterThreshold: 8
      readability-function-size.NestingThreshold: 6
      readability-function-size.VariableThreshold: 200
      
      # 行长度
      readability-line-length.LineLength: 100
      
      # 性能相关
      performance-for-range-copy.WarnOnAllAutoCopies: true
      performance-unnecessary-value-param.AllowedTypes: 'std::shared_ptr;std::unique_ptr;std::function'
      
      # 现代化相关
      modernize-loop-convert.MaxCopySize: 16
      modernize-loop-convert.MinConfidence: reasonable
      modernize-use-nullptr.NullMacros: 'NULL'
      
      # Core Guidelines
      cppcoreguidelines-special-member-functions.AllowSoleDefaultDtor: true
      cppcoreguidelines-special-member-functions.AllowMissingMoveFunctions: true

# 代码完成设定
Completion:
  AllScopes: true
  HeaderInsertion: Never

# 索引设置
Index:
  Background: Build
  StandardLibrary: Yes


# 悬停信息
Hover:
  ShowAKA: true
  # 显示更多详细信息

